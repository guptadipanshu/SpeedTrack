<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    >

   <com.google.android.maps.MapView
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:apiKey="0_OnKwv321YpnxaNVi3aqWvEPd6t5HP_4Eq4EVg"
                 android:id="@+id/mvMain"
                 android:enabled="true"
                 android:clickable="true"
                 
                              />

   <TextView
       android:id="@+id/speed1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/mvMain"
       android:layout_alignTop="@+id/mvMain"
       android:layout_marginRight="10dp"
     
       android:text="CURRENT SPEED 0KM.HR" 
       android:textAppearance="?android:attr/textAppearanceLarge"
      
       />

   <TextView
       android:id="@+id/speed2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/mvMain"
       android:layout_alignTop="@+id/mvMain"
       android:layout_marginLeft="14dp"
       android:text="SpeedLimit"
       android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>

